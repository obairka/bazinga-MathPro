@model IEnumerable<MathPro.Domain.Entities.TaskComment>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Имя пользователя")
        </th>
        <th>
            @Html.DisplayName("Номер задачи")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Details)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostedTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ApplicationUser.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MathAssignment.MathAssignmentId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Details)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostedTime)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.TaskCommentId }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.TaskCommentId })
        </td>
    </tr>
