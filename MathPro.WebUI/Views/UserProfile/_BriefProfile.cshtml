@model MathPro.WebUI.Models.UserProfileBriefViewModel

<div class="user-panel">
    <div class="panel panel-primary">
        <div class="panel-heading" style="width: 94%; float: right;">
            <h3 class="panel-title">@Model.UserName</h3>
        </div>
        <div class="panel-body" style="width: 94%; float: right;">
            <!--User photo-->
            <a href="@Url.Action("Edit", "UserProfile")">
                @if (File.Exists(Server.MapPath("~/Images/UserImages/" + Html.DisplayFor(modelItem => Model.UserImageName))))
                {
                    <img src="~/Images/UserImages/@Html.DisplayFor(modelItem => Model.UserImageName)" alt="user_image" class="img-thumbnail">
                }
                else
                {
                    <img src="~/Resources/Images/user.png" alt="user_default_image" class="img-thumbnail">
                }
            </a>
            <h4 class="text-center"><span class="glyphicon glyphicon-star" aria-hidden="true"></span> Рейтинг: @Model.Rating</h4>
            <div class="list-group">
                @Html.ActionLink("Мой профиль", "Me", new { controller = "UserProfile" }, new { @class = "list-group-item" })
                <a href="@Url.Action("IncomingBox", "Message")" class="list-group-item">
                    Мои Сообщения
                    @if (Model.UnreadMessageCount != 0)
                    {
                        <span class="badge">@Model.UnreadMessageCount</span>
                    }
                </a>
                @Html.ActionLink("Мои попытки", "MyAttempts", new { controller = "UserAttempt" }, new { @class = "list-group-item" })
                @Html.ActionLink("Настройки аккаунта", "Index", new { controller = "Manage" }, new { @class = "list-group-item" })

            </div>
        </div>
    </div>
</div>